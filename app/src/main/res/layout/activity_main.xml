<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="30"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="30"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/input1"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:tooltipText="123"
        android:inputType="number"
        android:background="#e1bee7"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/input2"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="#e1bee7"
        android:tooltipText="123"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintLeft_toRightOf="@id/input1"
        app:layout_constraintRight_toLeftOf="@id/input3" />


    <EditText
        android:id="@+id/input3"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="#e1bee7"
        android:text="50"
        android:tooltipText="size"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintLeft_toRightOf="@id/input2"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button00"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/input2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button01"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/button00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/button02"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/button01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button03"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/button02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button04"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/button03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button05"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/button04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button06"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/button05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button09"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/button06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    
</android.support.constraint.ConstraintLayout>